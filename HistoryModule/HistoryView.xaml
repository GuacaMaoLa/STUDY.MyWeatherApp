<UserControl x:Class="LEARN_MVVM.HistoryModule.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LEARN_MVVM.HistoryModule"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1B1B1B"
             d:DataContext="{d:DesignInstance Type=local:HistoryViewModel}">
    <UserControl.DataContext>
        <local:HistoryViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <DataGrid x:Name="historyDataGrid" AutoGenerateColumns="False"
                  EnableRowVirtualization="True" 
                  CanUserAddRows="False" Foreground="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="City"/>
                <DataGridTextColumn Header="Temperature"/>
                <DataGridTextColumn Header="Time Stamp"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

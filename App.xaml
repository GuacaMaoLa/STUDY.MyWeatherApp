<Application x:Class="LEARN_MVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LEARN_MVVM"
             xmlns:weatherModule="clr-namespace:LEARN_MVVM.Modules.WeatherAppModule"
             xmlns:historyModule="clr-namespace:LEARN_MVVM.Modules.HistoryModule"
             xmlns:notifyAndreModule="clr-namespace:LEARN_MVVM.Modules.NotifyAndreModule"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             StartupUri="MainWindow.xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type weatherModule:WeatherAppViewModel}">
                <weatherModule:WeatherAppView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type historyModule:HistoryViewModel}">
                <historyModule:HistoryView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type notifyAndreModule:NotifyAndreViewModel}">
                <notifyAndreModule:NotifyAndreView/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>